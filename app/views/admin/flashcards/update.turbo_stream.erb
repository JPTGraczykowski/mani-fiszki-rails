<% next_flashcard = @flashcard_set.flashcards.find_by(position: @flashcard.position + 1) %>

<% if next_flashcard %>
  <%= turbo_stream.remove @flashcard %>
  <%= turbo_stream.before dom_id(next_flashcard), @flashcard %>
<% else %>
  <%= turbo_stream.replace @flashcard %>
<% end %>

<%= render_turbo_stream_flash_messages %>
