<div class="flex flex-col rounded-xl border border-gray-200 bg-lime-50 p-6 shadow-md">
  <div class="mb-2 flex justify-between">
    <h3 class="text-xl font-bold text-gray-800"><%= flashcard_set.english_name %></h3>
    <% if flashcard_set.active %>
      <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
        Aktywny
      </span>
    <% else %>
      <span class="inline-flex items-center rounded-full bg-red-100 px-2.5 py-0.5 text-xs font-medium text-red-800">
        Nieaktywny
      </span>
    <% end %>
  </div>
  
  <p class="mb-2 text-xl text-gray-800">(<%= flashcard_set.polish_name %>)</p>
  <p class="mb-4 text-sm text-gray-800">Ilość fiszek: <%= flashcard_set.flashcards.size %></p>
  
  <div class="mt-auto flex space-x-3">
    <%= link_to edit_admin_flashcard_set_path(flashcard_set), 
                class: "flex items-center rounded-lg bg-blue-50 px-3 py-2 text-sm font-medium text-blue-700 #{hover_classes}" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="mr-1 h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
      </svg>
      Edytuj
    <% end %>
    
    <%= button_to admin_flashcard_set_path(flashcard_set),
                  method: :delete,
                  form: { data: { turbo_confirm: 'Czy na pewno chcesz usunąć zestaw wraz z wszystkimi fiszkami?' } },
                  class: "flex items-center rounded-lg bg-red-50 px-3 py-2 text-sm font-medium text-red-700 #{hover_classes}" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="mr-1 h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
      </svg>
      Usuń
    <% end %>
  </div>
</div>
