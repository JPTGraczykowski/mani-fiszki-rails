<aside class="border-r-1 hidden w-64 border-gray-300 bg-gray-100 px-5 py-5 sm:flex sm:flex-col">
  <%= FlashcardSet.find_each do |flashcard_set| %>
    <% active_set = flashcard_set == @flashcard_set %>

    <%= link_to flashcard_set do %>
      <div class="min-h-8 my-1 flex items-center justify-center rounded-lg border border-gray-300 bg-white hover:cursor-pointer hover:opacity-50 <%= active_set ? "border-gray-600 font-medium" : ""%>">
        <%= flashcard_set.english_name %>
        (<%= flashcard_set.polish_name %>)
      </div>
    <% end %>
  <% end %>
</aside>
