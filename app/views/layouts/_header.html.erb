<header class="sticky top-0 z-10 bg-lime-200 shadow-md">
  <div class="flex h-16 items-center justify-between sm:px-8 px-4">
    <a class="flex items-center text-2xl font-bold text-lime-600 transition-colors duration-200 hover:text-lime-700" href="/">
      <svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-8 w-8" viewBox="0 0 20 20" fill="currentColor">
        <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
      </svg>
      Mani Fiszki
    </a>

    <nav>
      <% if authenticated? %>
        <div class="flex items-center">
          <%= link_to admin_dashboard_path,
                      class: "rounded-lg px-3 py-2 text-gray-700 #{hover_classes}" do %>
            <span class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="mr-1 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM11 13a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
              </svg>
              <span class="hidden sm:block">ZarzÄ…dzaj</span>
            </span>
          <% end %>

          <%= button_to session_path,
                        method: :delete,
                        class: "rounded-lg px-3 py-2 text-gray-700 #{hover_classes}" do %>
            <span class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="mr-1 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z" clip-rule="evenodd" />
              </svg>
              <span class="hidden sm:block">Wyloguj</span>
            </span>
          <% end %>
        </div>
      <% else %>
        <%= link_to new_session_path,
                    class: "rounded-lg px-4 py-2 text-gray-700 #{hover_classes}" do %>
          <span class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="mr-1 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
            </svg>
            Zaloguj
          </span>
        <% end %>
      <% end %>
    </nav>
  </div>
</header>
