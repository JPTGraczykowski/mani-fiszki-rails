<% flash.each do |flash_type, message| %>
  <% colors = flash_type == "alert" ? "bg-red-100 text-red-500" : "bg-green-100 text-green-500" %>
  <div
    class="top-18 min-w-64 absolute right-2 z-10 rounded-lg border border-gray-300 px-5 py-2 text-center font-medium shadow-md transition-all duration-500 <%= colors %>"
    data-controller="flash-message"
    data-flash-message-target="flash"
  >
    <%= message %>
  </div>
<% end %>
