<% flash.each do |flash_type, message| %>
  <% 
    if flash_type == "alert"
      colors = "bg-red-100 border-red-300 text-red-700"
      icon_path = "M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z"
    else
      colors = "bg-green-100 border-green-300 text-green-700"
      icon_path = "M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
    end
  %>
  
  <div
    class="top-18 min-w-64 absolute right-4 z-10 flex items-center rounded-lg border px-4 py-3 shadow-lg transition-all duration-500 <%= colors %>"
    data-controller="flash-message"
    data-flash-message-target="flash"
  >
    <div class="mr-3 flex-shrink-0">
      <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="<%= icon_path %>" />
      </svg>
    </div>
    <div class="text-sm font-medium">
      <%= message %>
    </div>
  </div>
<% end %>
