<div class="mx-auto mt-3 flex flex-col items-center md:w-3/4">
  <div class="mt-2 w-full text-lg">
    Słówka w tym zestawie:
  </div>
  <% @flashcards.each do |flashcard| %>
    <div class="mt-2 flex w-full items-center justify-around">
      <% [flashcard.english_name, flashcard.polish_name].each do |label| %>
        <div class="w-1/2 truncate rounded-lg border border-gray-300 bg-white px-3 py-2 text-lg first:mr-1 last:ml-1"><%= label %></div>
      <% end %>
    </div>
  <% end %>
</div>
