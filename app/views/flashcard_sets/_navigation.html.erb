<div class="min-w-44 flex w-3/4 items-center justify-center">
  <% nav_link_class = "flex h-8 w-16 items-center justify-center rounded-lg border border-gray-300 bg-white hover:cursor-pointer hover:opacity-50" %>
  <% if @current_index > 0 %>
    <%= link_to "<", flashcard_set_path(@flashcard_set, index: @current_index - 1), class: nav_link_class %>
  <% else %>
    <div class="w-16"></div>
  <% end %>
  <div class="mx-3 h-8 w-16 text-center text-xl">
    <%= "#{@current_index + 1} / #{@flashcards.size}" %>
  </div>
  <% if @current_index < @flashcards.size - 1 %>
    <%= link_to ">", flashcard_set_path(@flashcard_set, index: @current_index + 1), class: nav_link_class %>
  <% else %>
    <div class="w-16"></div>
  <% end %>
</div>
