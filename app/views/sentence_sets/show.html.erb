<div class="mx-auto mb-3 flex flex-col items-center">
  <div class="mb-2 flex w-full flex-col items-center justify-between px-1 sm:flex-row md:w-3/4">
    <%= render "shared/back_button", back_url: sentence_sets_path %>
    <div class="w-full text-center text-xl">
      <%= "#{@sentence_set.english_name} (#{@sentence_set.polish_name})" %>
    </div>
  </div>
  <% if @sentence_set.sentences.any? %>
    <%= render "sentence" %>
    <%= render "navigation" %>
  <% else %>
    <%= render "shared/empty_set_preview" %>
  <% end %>
</div>
<%= render "show_sentence_translation_link" %>
